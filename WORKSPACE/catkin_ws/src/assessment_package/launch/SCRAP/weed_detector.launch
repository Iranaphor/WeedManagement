<?xml version="1.0"?>

<launch>
	<arg name="robot_name"/>
	<arg name="navigating" default="false"/>
	<arg name="basil" default="false"/>
	<arg name="cabbage" default="false"/>
	<arg name="onion" default="false"/>
	
	<group ns="$(arg robot_name)">
		<arg name="navigation_targets" default="$(find assessment_package)config/navigation_targets.yaml"/>
		<node name="navigator" pkg="assessment_package" type="navigator.py" output="screen" args="$(arg robot_name) $(arg navigation_targets)"/>
	</group>

	<!-- Launch basil detector -->
	<group ns="$(arg robot_name)" if="$(arg basil)">
		<node name="basil_detector" pkg="assessment_package" type="weed_detector.py" output="screen" args="basil $(arg robot_name)"/>
	</group>

	<!-- Launch cabbage detector -->
	<group ns="$(arg robot_name)" if="$(arg cabbage)">
		<node name="cabbage_detector" pkg="assessment_package" type="weed_detector.py" output="screen" args="cabbage $(arg robot_name)"/>
	</group>

	<!-- Launch onion detector -->
	<group ns="$(arg robot_name)" if="$(arg onion)">
		<node name="onion_detector" pkg="assessment_package" type="weed_detector.py" output="screen" args="onion $(arg robot_name)"/>
	</group>
</launch>
